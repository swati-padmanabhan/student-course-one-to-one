@model StudentCourseOneToOne.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style>
        body {
            font-family: 'Indie Flower', cursive;
            background-color: #212121;
            color: #F0ECE5;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 800px;
            background-color: #323232;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
        }

        h4 {
            text-align: center;
            color: #14FFEC;
            font-size: 24px;
            margin-bottom: 20px;
        }


        .dl-horizontal dt {
            float: left;
            width: 200px;
            font-weight: bold;
            color: #14FFEC;
            margin-bottom: 5px;
            font-size: 18px;
        }

        .dl-horizontal dd {
            margin-left: 160px;
            margin-bottom: 15px;
            font-size: 18px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #0D7377;
            color: #F0ECE5;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
            font-size: 16px;
            text-align: center;
            margin: 5px;
        }

            .btn:hover {
                background-color: #14FFEC;
            }

        p {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div>
        <h4>Student</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Age)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Age)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Course.CourseName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Course.CourseName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Course.Duration)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Course.Duration)
            </dd>

        </dl>
    </div>
</body>
</html>
